block container
    div(class='row', style='margin-top:4%;')
        div(class='col-xs-6', style=' text-align:left; padding-left:2%')
            h3(id='countdown') Time left:
        div(class='col-xs-6', style=' text-align:right; padding-right:2%')
            h3 Score: 
    div(class='row')
        div(class="col-xs-4")
            div.container(style='background: #ffa834; border: 2px solid #000000; height:50%; margin-top:40%; width:100%')
                h4(style='width:110%;') Taboo Words:
        div(class="col-xs-4")
            h3(style='width:120%;',id='mode', name='mode') Another word that means...
            h1(style='font-size:350%; margin-top:40%;', id='keyword', name='keyword') Shoe
        div(class="col-xs-4") 
            div.container(style='background: #ffa834; border: 2px solid #000000; height:50%; margin-top:40%; width:100%')
                h4 Your Words:
                ul(id="guessList")
    div(class='row')
        div(class='col-xs-10', style=' text-align:left; padding-left:2%')
            form(id="form" onsubmit='addToGuessList(); sendWord(guess.value); return false;')
                input(id='guess', name='guess', type='text', placeholder='Guesses', class='form-control input-md', required='', style="font-size:180%; text-align:center; width:98%; margin-left:1%; margin-top:3%;")
        div(class='col-xs-2', style=' text-align:left; padding-left:.5%')
            button(type="button" class="btn btn-danger", style="font-size:140%; display:inline; margin-top:10%;") Pass
    div(class='row')
        div(class="progress-bar progress-bar-success", role="progressbar", aria-valuenow="1", aria-valuemin="0", aria-valuemax="100", style="width:90%; height:5%; margin-top:3%; text-align:center; margin-left:5%")
script.
    function addToGuessList(){
        var node = document.createElement("LI");
        var textnode = document.createTextNode(guess.value);
        node.appendChild(textnode);
        document.getElementById("guessList").appendChild(node);
    }
